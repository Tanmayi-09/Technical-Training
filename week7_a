Aim:develop a program in c to implement employee management system using structures.
Program:#include <stdio.h>

struct Employee {
    int id;
    char name[50];
    float salary;
};

int main() {
    struct Employee e;
    
    printf("Enter ID: ");
    scanf("%d", &e.id);
    
    printf("Enter Name: ");
    scanf("%s", e.name);
    
    printf("Enter Salary: ");
    scanf("%f", &e.salary);
    
    printf("\nEmployee Details:\n");
    printf("ID: %d\n", e.id);
    printf("Name: %s\n", e.name);
    printf("Salary: %.2f\n", e.salary);
    
    return 0;
}
